<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/background">
    <LinearLayout
        android:id="@+id/subgenre_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
        android:id="@+id/sub_genre1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="Add a subgenre"
        android:textSize="16sp"
        android:singleLine="true"
        android:typeface="sans"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#6fffffff"
        android:layout_marginLeft="-1dp"
        android:background="#38ffffff"
        android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/sub_genre2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Add a subgenre"
            android:textSize="16sp"
            android:singleLine="true"
            android:typeface="sans"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textColorHint="#6fffffff"
            android:layout_marginLeft="-1dp"
            android:background="#38ffffff"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/sub_genre3"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Add a subgenre"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:typeface="sans"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#6fffffff"
            android:layout_marginLeft="-1dp"
            android:background="#38ffffff"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1d1d1d"
        app:cardElevation="3dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/subgenre_lay">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1d1d1d"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textStyle="bold"
            android:text="+Add"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1d1d1d"
        app:cardElevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1d1d1d"
            android:textSize="15sp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textStyle="bold"
            android:text="Cancel"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>