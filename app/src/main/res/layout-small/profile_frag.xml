<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_logo"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_bg"
            android:layout_marginBottom="-5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="90dp"
                android:elevation="2dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ak"
                />
            <LinearLayout
                android:id="@+id/initial"
                android:layout_toRightOf="@id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a8a8a8"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/fbLink"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/fb_link"/>
                    <ImageView
                        android:id="@+id/twitter_link"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/twitter_link"/>
                    <ImageView
                        android:id="@+id/utube_link"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/yt_link"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/gp_link"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/g_link"/>
                    <ImageView
                        android:id="@+id/sc_link"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/sc_link"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_above="@id/links"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                >
                </LinearLayout>

            <LinearLayout
                android:id="@+id/other_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chat_blue"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/follow_btn"
                        android:layout_width="90dp"
                        android:layout_height="32dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Unfollow"
                        android:background="@drawable/round_rec_bound"
                        android:gravity="center"
                        android:typeface="sans"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/jam_btn"
                        android:layout_width="90dp"
                        android:layout_height="32dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Jam"
                        android:background="@drawable/round_rec_bound"
                        android:gravity="center"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:paddingTop="7dp"
                        android:visibility="gone"
                        android:paddingBottom="7dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"/>
                        <TextView
                            android:id="@+id/book_btn"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:textSize="12dp"
                            android:textColor="#ffffff"
                            android:text="Book"
                            android:background="@drawable/round_rec_bound"
                            android:gravity="center"
                            android:typeface="sans"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/book_load"
                            android:layout_width="90dp"
                            android:visibility="gone"
                            android:layout_height="15dp"
                            android:src="@drawable/small_load"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/selector"
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/follow_load"
                android:layout_width="95dp"
                android:visibility="gone"
                android:layout_height="15dp"
                android:src="@drawable/small_load"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"/>
            </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone">
    <com.rey.material.widget.ProgressView
        android:id="@+id/loader"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:cpd_strokeColor="#20baf5"
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#20baf5"
        android:layout_below="@id/loader"
        android:text="Getting Details"
        android:textSize="25sp"
        android:gravity="center"
        android:typeface="sans"
        android:alpha="0.7"/>
</RelativeLayout>
</RelativeLayout>
    </ScrollView>