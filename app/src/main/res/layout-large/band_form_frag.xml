<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="22dp"
            android:src="@drawable/ic_camera"
            android:background="@drawable/select2"/>
        <ImageView
            android:id="@+id/gallery"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="22dp"
            android:src="@drawable/ic_gallery"
            android:layout_marginLeft="20dp"
            android:background="@drawable/select2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#1d1d1d"
            app:cardElevation="2dp"
            android:foregroundGravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_white"
                android:padding="10dp"
                android:foregroundGravity="center"/>
        </android.support.v7.widget.CardView>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name of Band"
            android:textSize="24sp"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#83ffffff"
            android:layout_marginLeft="-2dp"
            android:typeface="sans"
            android:background="#1bffffff"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#1d1d1d"
            app:cardElevation="2dp"
            android:foregroundGravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_nearby_white"
                android:padding="10dp"
                android:foregroundGravity="center"/>
        </android.support.v7.widget.CardView>
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter City"
            android:singleLine="true"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#83ffffff"
            android:layout_marginLeft="-2dp"
            android:background="#1bffffff"
            android:layout_gravity="center_vertical"
            android:typeface="sans"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="#1d1d1d"
                app:cardElevation="2dp"
                android:foregroundGravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music"
                    android:padding="10dp"
                    android:foregroundGravity="center"/>
            </android.support.v7.widget.CardView>
            <com.rey.material.widget.Spinner
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                app:spn_arrowSize="12dp"
                android:gravity="center"
                app:spn_arrowPadding="15dp"
                android:background="#1bffffff"
                app:spn_dividerColor="#1d1d1d"
                app:spn_arrowColor="#1d1d1d" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="#1d1d1d"
                app:cardElevation="2dp"
                android:foregroundGravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music_notes"
                    android:padding="10dp"
                    android:foregroundGravity="center"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/sub_genre"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Sub-Genre"
                android:textSize="24sp"
                android:singleLine="true"
                android:padding="10dp"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:textColorHint="#83ffffff"
                android:layout_marginLeft="-1dp"
                android:background="#1bffffff"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#1d1d1d"
            app:cardElevation="2dp"
            android:foregroundGravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_founded"
                android:padding="10dp"
                android:foregroundGravity="center"/>
        </android.support.v7.widget.CardView>
        <EditText
            android:id="@+id/founded_on"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Founded on"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#83ffffff"
            android:layout_marginLeft="-1dp"
            android:background="#1bffffff"
            android:layout_gravity="center_vertical"
            android:typeface="sans"
            android:inputType="date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#1d1d1d"
            app:cardElevation="2dp"
            android:foregroundGravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_nearby_white"
                android:padding="10dp"
                android:foregroundGravity="center"/>
        </android.support.v7.widget.CardView>
        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Contact"
            android:singleLine="true"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#83ffffff"
            android:layout_marginLeft="-1dp"
            android:background="#1bffffff"
            android:inputType="number"
            android:layout_gravity="center_vertical"
            android:typeface="sans"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/next_page"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_next"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>