<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context="euphony.com.euphony.LoginActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="#ffffff"
        android:text="EUPHONY"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:layout_alignParentBottom="true"
        android:paddingRight="40dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/fake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <com.andexert.library.RippleView
            android:id="@+id/login_f"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:rv_ripplePadding="3dp"
            app:rv_rippleDuration="300"
            app:rv_centered="true">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#2042b1"
                app:cardElevation="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/f"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_f"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in with Facebook"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/login_g"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            app:rv_rippleDuration="300"
            app:rv_centered="true"
            app:rv_ripplePadding="3dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#f53535"
                app:cardElevation="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/g"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_g"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_marginLeft="-14dp"
                        android:layout_toRightOf="@id/g"
                        android:textColor="#ffffff"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in with Google"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bd000000"
        android:visibility="gone">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ring"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
