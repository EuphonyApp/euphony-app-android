<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_logo"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            app:cardBackgroundColor="#282828"
            app:cardElevation="3dp"
            android:layout_marginBottom="-5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/name_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="160dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:typeface="sans" />
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a8a8a8"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Venue"/>
            </LinearLayout>
                    <TextView
                        android:id="@+id/follow_btn"
                        android:layout_width="150dp"
                        android:visibility="gone"
                        android:layout_height="50dp"
                        android:textSize="22dp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/name_lay"
                        android:text="Follow"
                        android:background="@drawable/round_rec_bound"
                        android:gravity="center"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"/>
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/follow_load"
                    android:layout_width="150dp"
                    android:visibility="gone"
                    android:layout_below="@id/name_lay"
                    android:layout_height="35dp"
                    android:src="@drawable/small_load"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp" />
                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="60dp"
                    android:visibility="gone"
                    android:layout_height="60dp"
                    android:layout_toLeftOf="@id/follow_btn"
                    android:layout_alignTop="@id/follow_btn"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_chat_blue"/>
            <ImageView
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_below="@id/name_lay"
                android:background="@drawable/selector"
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:id="@+id/location_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:text="Location:  "/>
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:typeface="sans"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:text="Capacity:  "/>
                <TextView
                    android:id="@+id/capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:typeface="sans"
                    android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="60dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:layout_marginTop="10dp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:text="Contact:  "/>
                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:typeface="sans"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/fb_link"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fb_link"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="120dp"/>
                <com.google.android.gms.maps.MapView
                    android:id="@+id/venue_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/location_lay"
                    android:layout_above="@id/fb_link"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ak"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone">
        <com.rey.material.widget.ProgressView
            android:id="@+id/loader"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:cpd_strokeColor="#20baf5"
            android:layout_centerInParent="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#20baf5"
            android:layout_below="@id/loader"
            android:text="Getting Details"
            android:textSize="25sp"
            android:gravity="center"
            android:typeface="sans"
            android:alpha="0.7"/>
    </RelativeLayout>
</RelativeLayout>